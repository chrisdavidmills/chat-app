<!doctype html>
<html>
<head>
  {{>meta}}
</head>
<body>
  <h1>{{title}}</h1>

  <div class='main'>
    <div class="sidebar">
      <h2 class="room-name">Room: </h2>

      <ul class="users-list">
      </ul>
    </div>
    <div class="main-col">
      <dl class="messages">
      </dl>

      <hr>

      <div class="controls">
        <form id="message-form">
          <h2><label for="message-input">Enter a message:</label></h2>
          <input type="text" id="message-input" required autocomplete="off">
          <button type="submit">Send message</button>
          <button type="button" id="send-location">Send location</button>
        </form>
      </div>
      <p class="output"></p>
    </div>
  </div>

  <!--
  <script id="message-template" type="text/html">
    <li>{{msg}}</li>
  </script>
  -->

  <!-- Setting up the client part of socket.io library  -->
  <script src="/socket.io/socket.io.js"></script>
  <!--  other client-side libs that we'll use  -->
